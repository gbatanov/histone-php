<?xml version="1.0" encoding="UTF-8"?>
<suites>

	<suite name="var statement">
		<case>
			<input>{{var x = 10}}</input>
			<expected/>
		</case>

		<case>
			<input>{{var x = sadfdasf}}{{x}}</input>
			<expected/>
		</case>

		<case>
			<input>{{var x = null}}{{x}}</input>
			<expected>null</expected>
		</case>

		<case>
			<input>{{var x = true}}{{x}}</input>
			<expected>true</expected>
		</case>

		<case>
			<input>{{var x = false}}{{x}}</input>
			<expected>false</expected>
		</case>

		<case>
			<input>{{var x = 10}}{{x}}</input>
			<expected>10</expected>
		</case>

		<case>
			<input>{{var x = "string"}}{{x}}</input>
			<expected>string</expected>
		</case>

		<case>
			<input>{{var x = [1, 2, 3]}}{{x}}</input>
			<expected>1 2 3</expected>
		</case>

		<case>
			<input>{{var x = [foo:"bar"]}}{{x}}</input>
			<expected>bar</expected>
		</case>

		<case>
			<input>{{var x = [foo: undefined]}}{{x}}</input>
			<expected></expected>
		</case>

		<case>
			<input>{{var x = [foo:"bar"]}}{{x}}</input>
			<expected>bar</expected>
		</case>

		<case>
			<input>{{var x = [foo:"bar", other: undefined]}}{{x}}</input>
			<expected>bar</expected>
		</case>

		<case>
			<input>{{var x}}{{/var}}</input>
			<expected/>
		</case>

		<case>
			<input>{{var x}}{{/var}}{{x}}</input>
			<expected/>
		</case>

		<case>
			<input>{{var x}}something{{/var}}{{x}}</input>
			<expected>something</expected>
		</case>

		<case>
			<input>{{var x}}{{safsdaf}}{{/var}}{{x}}</input>
			<expected/>
		</case>

		<case>
			<input>{{var x}}{{null}}{{/var}}{{x}}</input>
			<expected>null</expected>
		</case>

		<case>
			<input>{{var x}}{{true}}{{/var}}{{x}}</input>
			<expected>true</expected>
		</case>

		<case>
			<input>{{var x}}{{false}}{{/var}}{{x}}</input>
			<expected>false</expected>
		</case>

		<case>
			<input>{{var x}}{{12}}{{/var}}{{x}}</input>
			<expected>12</expected>
		</case>

		<case>
			<input>{{var x}}{{'string'}}{{/var}}{{x}}</input>
			<expected>string</expected>
		</case>

		<case>
			<input>{{var x}}{{[1, 2, 3]}}{{/var}}{{x}}</input>
			<expected>1 2 3</expected>
		</case>

		<case>
			<input>{{var x}}{{[foo:"bar"]}}{{/var}}{{x}}</input>
			<expected>bar</expected>
		</case>
	</suite>
</suites>