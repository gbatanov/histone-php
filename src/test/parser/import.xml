<?xml version="1.0" encoding="UTF-8"?>
<suites>

    <suite name="func import">

        <case>
            <input>{{import</input>
            <exception>
                <line>1</line>
                <expected>string</expected>
                <found>EOF</found>
            </exception>
        </case>

        <case>
            <input>{{import}}</input>
            <exception>
                <line>1</line>
                <expected>string</expected>
                <found>}}</found>
            </exception>
        </case>

        <case>
            <input>{{import bla}}</input>
            <exception>
                <line>1</line>
                <expected>string</expected>
                <found>bla</found>
            </exception>
        </case>

        <case>
            <input>{{import 'template.tpl'}}</input>
            <expected type="json">[[110, "template.tpl"]]</expected>
        </case>

        <case>
            <input>{{import 'template.tpl',}}</input>
            <exception>
                <line>1</line>
                <expected>}}</expected>
                <found>,</found>
            </exception>
        </case>

        <case>
            <input>{{import 't1.tpl', 't2.tpl'}}</input>
            <exception>
                <line>1</line>
                <expected>}}</expected>
                <found>,</found>
            </exception>
        </case>

    </suite>
</suites>